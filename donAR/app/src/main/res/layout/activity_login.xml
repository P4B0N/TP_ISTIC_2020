<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/border_image"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo"
            android:id="@+id/logomark"
            android:layout_marginTop="17dp"
            android:padding="3dp"
    />

    <TextView
            android:id="@+id/mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logomark"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="donAr"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"

            />

    <EditText
            android:id="@+id/lEmail"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/viewLine"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/border_ta"
            android:hint="Nombre Usuario"
            android:padding="5dp" />

    <EditText
            android:id="@+id/lPassword"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/lEmail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_ta"
            android:hint=" ContraseÃ±a"
            android:inputType="textPassword"
            android:padding="5dp" />
    <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#000000"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/viewLine"
            android:layout_below="@+id/mark"/>

    <Button
            android:id="@+id/loginbtn"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/lPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="#00cf00"
            android:text="ACCEDER"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />
    <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#000000"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/viewLine1"
            android:layout_below="@+id/loginbtn"/>

    <TextView
            android:id="@+id/mark2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewLine1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="No posee una cuenta?"
            android:textSize="25sp" />

    <Button
            android:id="@+id/Signbtn"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/mark2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="#00cf00"
            android:text="REGISTRARSE"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold"

            />
</RelativeLayout>