<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Operacion">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="Â¿que operacion quieres realizar?"
            android:textColorHint="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <Button
            android:id="@+id/ConsultarPreciosBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="?attr/colorButtonNormal"
            android:text="ESCANEAR CODIGO DE BARRA" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <Button
            android:id="@+id/cnsProductos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="?attr/colorButtonNormal"
            android:text="CONSULTAR PRODUCTOS" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <Button
            android:id="@+id/agrPrdBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="?attr/colorButtonNormal"
            android:text="AGREGAR PRODUTCO" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <Button
            android:id="@+id/consultarDescuento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="?attr/colorButtonNormal"
            android:text="CONSULTAR DESCUENTOS" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>