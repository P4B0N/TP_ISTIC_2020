<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/imgViewHomeOwner"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/pavoreal"
        android:transitionName="logoImageTransHome" />

    <TextView
        android:id="@+id/txtPerfilOwner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/buenard"
        android:text="Ferre-Tex"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold"
        android:transitionName="txtPerfilTrans" />

    <TextView
        android:id="@+id/txtSeleccionPerfilOwner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/buenard"
        android:text=""
        android:textAlignment="center"
        android:textSize="24sp"
        android:transitionName="iniciaSesionTextTrans" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnProductos"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/borde_redondo"

            android:text="PRODUCTOS"
            android:textAllCaps="true"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="18sp"
            android:textStyle="bold"
            android:transitionName="buttonSignInTrans" />



        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGanancias"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/borde_redondo"
            android:radius="30px"
            android:text="GANANCIA"

            android:textAlignment="center"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="18sp"
            android:textStyle="bold"
            android:transitionName="buttonSignInTrans" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVentas"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/borde_redondo"
            android:text="VENTAS"
            android:textAllCaps="false"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="18sp"
            android:textStyle="bold"
            android:transitionName="buttonSignInTrans" />
    </LinearLayout>

</LinearLayout>